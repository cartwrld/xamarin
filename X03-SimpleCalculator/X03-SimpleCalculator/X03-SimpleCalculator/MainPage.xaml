<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="X03_SimpleCalculator.MainPage">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">

        <Label Text="Welcome to Simple Calculator" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Entry x:Name="num1" Keyboard="Numeric"/>
        <Picker x:Name="pickOp" Title="Select an operation">
            <Picker.ItemsSource>
                <x:Array Type="{x:Type x:String}">
                    <x:String>Add</x:String>
                    <x:String>Subtract</x:String>
                    <x:String>Multiply</x:String>
                    <x:String>Divide</x:String>
                </x:Array>
            </Picker.ItemsSource>
        </Picker>
        <Entry x:Name="num2" Keyboard="Numeric"/>
        <Button x:Name="btnCalc" Text="Calculate!"></Button>
        <Label x:Name="lblResult" HorizontalOptions="Center" VerticalOptions="Center"/>

